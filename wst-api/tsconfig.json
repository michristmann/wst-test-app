{
  "compilerOptions": {
    "paths": {
      "@models/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@controllers/*": ["./src/controllers/*"]
    },
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "strictNullChecks": false,
    "pretty": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "includes": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["**/node_modules", "**/.git", "dist"]
}
